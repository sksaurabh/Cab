<?xml version="1.0" encoding="utf-8"?>
<!--And center_vertical gravity on all the child views-->
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/action_bar_leftIcon"
            style="@style/SelectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/i1_15dp_margin"
            android:paddingRight="@dimen/i1_10dp_margin"
            android:clickable="true" />

        <TextView
            android:id="@+id/action_bar_title"
            android:layout_width="wrap_content"
            android:textSize="@dimen/i1_twelve"
            android:textColor="@color/primary_text"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/action_bar_rightText"
            style="@style/SelectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/i1_15dp_margin"
            android:clickable="true" />

        <ImageView
            android:id="@+id/action_bar_rightIcon"
            style="@style/SelectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/action_bar_rightIcon2"
            android:paddingRight="@dimen/i1_10dp_margin"
            android:paddingLeft="@dimen/i1_10dp_margin"
            android:clickable="true" />

        <ImageView
            android:id="@+id/action_bar_rightIcon2"
            style="@style/SelectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/i1_15dp_margin"
            android:paddingLeft="@dimen/i1_15dp_margin"
            android:clickable="true" />
    </RelativeLayout>

</FrameLayout>