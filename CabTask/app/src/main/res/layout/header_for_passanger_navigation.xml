<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_drawer_header_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/vI_pl_userPic"
        android:layout_width="100dp"
        android:layout_marginTop="@dimen/i1_50dp_margin"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/drawer_profile_icon" />


    <TextView
        android:id="@+id/vT_pl_userName"
        style="@style/i1_text_view_nav_header"
        android:gravity="center"
        android:maxLines="1"
        android:text="--"
        android:layout_below="@+id/vI_pl_userPic"
        android:textColor="@color/primary_text" />

</RelativeLayout>
